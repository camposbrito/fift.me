  @media only screen and (min-width: 720px) and (max-width: 959px) {
    
    .diferenciais:after{
        background: none;
    }
    .diferenciais .titulo {
        text-align: left;
    }
    .diferenciais .lista li.projetos {
        position: relative;
        right: 0%;
    }
    .diferenciais .lista li.experiencia {
        position: relative;
        right: 0%;
    }
    .diferenciais .lista li.assistencia {
        position: relative;
        right: 0%;
    }
    .space{
        display: none;
    }

}
    
  
